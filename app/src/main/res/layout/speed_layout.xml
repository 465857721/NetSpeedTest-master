<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/bg_float_speed"
              android:paddingLeft="2dp"
              android:paddingRight="2dp"
              android:orientation="vertical">


    <TextView
        android:id="@+id/speed_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@drawable/up"
        android:gravity="left"
        android:text="upload speed"
        android:textColor="@android:color/white"
        android:textSize="10sp"/>


    <TextView
        android:id="@+id/speed_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/down"
        android:gravity="left"
        android:text="download speed"
        android:textColor="@android:color/white"
        android:textSize="10sp"/>

</LinearLayout>